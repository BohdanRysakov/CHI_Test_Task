<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sky_gradient"
        android:id="@+id/myLayout"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tears counter:"
            android:fontFamily="@font/chp"
            android:textColor="@color/counterText"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/btn_click_me" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="244dp" android:layout_marginStart="84dp"
            android:id="@+id/counter"
            android:textSize="20dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 1"
            android:textColor="@color/purpleText"
            android:fontFamily="@font/pacifico"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="80sp"
            android:id="@+id/lvl1"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simple clicker"
            android:textColor="@color/purpleText"
            android:fontFamily="@font/pacifico"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/lvl1"
            android:id="@+id/simpleClicker" android:layout_marginTop="-20dp"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/lightning"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="200dp" app:layout_constraintTop_toBottomOf="@+id/btn_click_me"
            android:layout_marginTop="-40dp" android:id="@+id/lightning"/>
    <ImageView
            android:layout_width="800dp"
            android:layout_height="300dp"
            android:src="@drawable/rainbow"
            android:id="@+id/rainbow"
            app:layout_constraintBottom_toBottomOf="parent" tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/btn_click_me"
            android:layout_marginTop="200dp" app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintVertical_bias="0.511"/>
    <Button
            android:id="@+id/btn_click_me"
            android:layout_width="181dp"
            android:layout_height="119dp"
            android:background="@drawable/button_image"
            app:backgroundTint="@null"
            android:text="Click me!"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="200dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>